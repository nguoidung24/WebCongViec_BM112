             $('.DataTableJS-ThongKe').DataTable({
                pageLength: 888,  // Thiết lập số lượng bản ghi hiển thị mỗi trang
                lengthMenu: [5, 15, 35, 50, 888],  // Các lựa chọn khác cho số lượng bản ghi mỗi trang
                footerCallback: function (row, data, start, end, display) {
                    var api = this.api();

                    // Lấy số lượng cột
                    var columnCount = api.columns().count();

                    // Duyệt qua từ cột thứ 2 trở đi
                    for (var col = 1; col < columnCount; col++) {
                        // Tính tổng của cột hiện tại
                        var total = api
                            .column(col)
                            .data()
                            .reduce(function (a, b) {
                                return parseFloat(a) + parseFloat(b);
                            }, 0);

                        // Cập nhật tổng vào footer của cột
                        $(api.column(col).footer()).html(total);
                    }
                }
            });

            $('#DataTableJS').DataTable({
